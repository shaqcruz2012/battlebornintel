# BBI Backend Environment Variables
# Copy to .env and fill in your values

# Database
DATABASE_URL=postgresql://bbi:bbi_dev_2024@localhost:5432/bbi

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:4173

# Anthropic API (required for agentic researcher + news extraction)
ANTHROPIC_API_KEY=sk-ant-...

# NewsAPI (optional — for news enrichment pipeline)
NEWS_API_KEY=

# SerpAPI (optional — for web search in agent discovery mode)
SERP_API_KEY=

# Agent limits
AGENT_MAX_SEARCHES_PER_RUN=20
AGENT_MAX_COST_PER_RUN=2.0
AGENT_VERIFY_BATCH_SIZE=10
AGENT_ENRICH_BATCH_SIZE=5

# Confidence thresholds
CONFIDENCE_AUTO_APPROVE=0.85
CONFIDENCE_REVIEW_THRESHOLD=0.60
